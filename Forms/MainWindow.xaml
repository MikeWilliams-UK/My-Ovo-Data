<Window
    x:Class="OvoData.Forms.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Your OVO SMART meter data"
    Width="400"
    Height="300"
    Icon="/Images/Ovo.ico"
    Loaded="OnLoaded_MainWindow"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center">
                Username:
            </TextBlock>
            <TextBox
                x:Name="UserName"
                Grid.Row="0"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="5"
                VerticalAlignment="Center">
                Password:
            </TextBlock>
            <PasswordBox
                x:Name="Password"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center"
                PasswordChar="•" />
            <Button
                x:Name="Login"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                Width="50"
                Margin="5"
                Click="OnClick_Login">
                Login
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Margin="5">Accounts:</TextBlock>
            <ListView
                x:Name="Accounts"
                Grid.Column="1"
                Margin="5"
                SelectionChanged="OnSelectionChanged_Accounts" />
        </Grid>
        <Grid Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Margin="5">From:</TextBlock>
            <TextBlock
                x:Name="FirstDate"
                Grid.Column="1"
                Margin="5" />
            <TextBlock Grid.Column="2" Margin="5">To:</TextBlock>
            <TextBlock
                x:Name="LastDate"
                Grid.Column="3"
                Margin="5" />
            <Button
                x:Name="Read"
                Grid.Column="4"
                Margin="5"
                Click="OnClick_Read"
                IsEnabled="False">
                Read
            </Button>
            <Button
                x:Name="Export"
                Grid.Column="5"
                Margin="5"
                Click="OnClick_Export"
                IsEnabled="False">
                Export
            </Button>
            <Button
                x:Name="Cancel"
                Grid.Column="6"
                Margin="5"
                Click="OnClick_Cancel"
                IsEnabled="False">
                Cancel
            </Button>
        </Grid>
        <Grid Grid.Row="3">
            <ComboBox
                x:Name="StopWhen"
                Margin="5"
                IsEnabled="False"
                SelectionChanged="OnSelectionChanged_StopWhen" />
        </Grid>
        <TextBlock
            x:Name="Status"
            Grid.Row="4"
            Padding="5"
            Background="LightGray">
            Status ...
        </TextBlock>
    </Grid>
</Window>